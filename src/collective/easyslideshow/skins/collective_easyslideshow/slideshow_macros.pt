<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal">
<body>

<metal:ad define-macro="slideshow"
          tal:define="view context/@@easyslideshow_view;
                      slideshowfolderid slideshowfolderid|string:slideshow-folder;
                      images python:view.getImages(slideshowfolderid);
                      props portal_properties/easyslideshow_properties;
                      pause python:props.pause_hover and '1' or '0'">
  <tal:cond tal:condition="images">
  
    <tal:block tal:replace='structure string:&lt;script type="text/javascript" charset="utf-8"&gt;'></tal:block>
      <tal:translate i18n:translate="">
      var jq = jQuery;
      jq(document).ready(function(){
            jq("#slideshow").css("visibility","visible");
            
            jq('#slideshow').cycle({
                fx: '<span tal:replace="props/transition" />',
                pause: <span tal:replace="pause" />,
                timeout: <span tal:replace="props/slide_timeout" />,
                speed: <span tal:replace="props/transition_speed" />,
                pager:  '#navNumbers',
                next: '#next',
                prev: '#prev'
            });
            
            slidewidth = <span tal:replace="props/slideshow_width" />;
            slideheight = <span tal:replace="props/slideshow_height" />;
            
            jq(".imageCaption").css({"width":slidewidth, "margin-top":slideheight-75});
        });
      </tal:translate>
    <tal:block tal:replace='structure string:&lt;/script&gt;'></tal:block>
  
    <div id="nav" tal:condition="props/display_nav"
         tal:attributes="style string:width:${props/slideshow_width}px">
        <a id="prev" href="#">&laquo;</a>
        <span id="navNumbers"></span>
        <a id="next" href="#">&raquo;</a>
    </div>
  
    <div id="slideshow" class="pics"
         tal:attributes="style string:width:${props/slideshow_width}px;; height:${props/slideshow_height}px"> 
        <tal:rep repeat="image images">
          <div class="slideContainer">
              <tal:def define="title image/Title;
                               description image/Description;
                               url image/getURL;
                               link_path image/getRelatedLink">
                <div class="imageCaption" tal:condition="props/display_caption" i18n:translate="">
                    <span class="imageTitle" tal:content="title" i18n:name="slide_title" />
                    <span class="imageDescrip" tal:content="description" i18n:name="slide_description" />
                </div>
                <a tal:attributes="href string:${context/portal_url}/$link_path"
                   tal:omit-tag="not:link_path">
                    <img title="" alt="" tal:attributes="src url" />
                </a>
              </tal:def>
          </div>
        </tal:rep>
    </div>
  </tal:cond>
</metal:ad>
</body>
</html>